#!/usr/bin/env bash
set -euo pipefail

if [[ $# -lt 1 ]]; then
  echo "Usage: $0 <version>"
  exit 1
fi

VERSION="$1"

echo "Installing hello version $VERSION"

# Simulate install
INSTALL_DIR="${INSTALL_PATH:-"$HOME/.local/share/mise/installs/hello/$VERSION"}"
mkdir -p "$INSTALL_DIR/bin"
echo -e '#!/usr/bin/env bash\necho "Hello from version '"$VERSION"'"' > "$INSTALL_DIR/bin/hello"
chmod +x "$INSTALL_DIR/bin/hello"

